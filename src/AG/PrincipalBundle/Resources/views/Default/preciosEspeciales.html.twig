{% extends 'AGPrincipalBundle:Default:panel.html.twig' %}

{% block contenido %}

	<div class="row">
		<h4>Lista de precios para distribuidores especiales</h4>
	</div>
	<div class="row">
		<div class="panel panel-default">
	        <table class="table table-striped table-hover table-responsive">
	            <thead>
	                <tr>
	                    <th>Clave</th>
	                    <th>Nombre</th>
	                    <th>Precio normal</th>
	                    <th>Precio especial</th>
	                </tr>
	            </thead>
	            <tbody>
	                {% for producto in productos %}
	                    <tr>
	                        <td>{{producto.Clave}}</td>
	                        <td>{{producto.Nombre}}</td>
	                        <td>{{producto.Precio}}</td>
	                        <td>{{producto.PrecioEspecial}}</td>
	                    </tr>
	                {% endfor %}
	            </tbody>
	        </table>
	    </div>
	</div>

{% endblock %}