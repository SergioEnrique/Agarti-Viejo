{% extends '::principal.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<style type="text/css">
		#form_Enviar{
			right: 0;
			position: absolute;
		}
	</style>
{% endblock %}

{% block contenido %}
	
	<div class="row text-right">
		<h4>Contacte con nosotros a través del siguiente formulario</h4>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
				<h3 class="panel-title">Información de contacto</h3>
				</div>
				<div class="panel-body">
					<img src="{{asset('img/tepeapulco.jpg')}}" style="width:100%;">
				</div>
				<div class="panel-footer">
					<p>Agendas y Artículos de Calidad, S.A. de C.V.<br /><strong>Agarti</strong></p>
					<p><b>Teléfonos:</b><br />
					D.F. y área metropolitana: <b>(55) 4995 0659</b><br />
					Lada sin Costo: <b>01 800 713 4657</b><br />
					Fax: <b>(791) 913 6229</b></p>
					<p><b>E-mail: </b><a href="mailto:contacto@agarti.com.mx">contacto@agarti.com.mx</a></p>
					<p>Av. Miguel Hidalgo, No. 21, Col. Centro, Tepeapulco, Hidalgo. C.P. 43970</p>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			{% for flashMessage in app.session.flashbag.get('notice') %}
				<div class="row" style="margin-top:20px;">
				    <div class="alert alert-info">
				        {{ flashMessage }}
				    </div>
				</div>
			{% endfor %}
			<div class="row" style="margin-top:20px;">
				{{ form_start(formContacto) }}
				{{ form_end(formContacto) }}
			</div>
		</div>
	</div>

{% endblock %}