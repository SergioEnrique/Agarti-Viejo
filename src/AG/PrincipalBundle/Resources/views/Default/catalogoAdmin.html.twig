{% extends 'AGPrincipalBundle:Default:panel.html.twig' %}

{% block contenido %}
    <h4>Administraci√≥n de productos</h4>
    <div class="panel panel-default">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Precio especial</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                {% for producto in productos %}
                     <tr>
                        <td>{{producto.Clave}}</td>
                        <td>{{producto.Nombre}}</td>
                        <td>{{producto.Precio}}</td>
                        <td>{{producto.PrecioEspecial}}</td>
                        <td >
                            <a href="{{ path('ag_principal_editar_producto', {productoId: producto.Id}) }}"><img src="{{asset('img/xedit.gif')}}"></a>
                            <a href="{{ path('ag_principal_borrar_producto', {productoId: producto.Id}) }}"><img src="{{asset('img/xdelete.gif')}}"></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}