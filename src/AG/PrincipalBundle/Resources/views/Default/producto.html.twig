{% extends '::principal.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" type="text/css" href="{{asset('css/cloudzoom.css')}}" />
{% endblock %}

{% block contenido %}
		
	<div class="row">
		<div class="col-sm-12">
			<h1 style="color: rgb(13, 85, 107); margin-bottom: 5px; font-size: 29px;">{{producto.nombre}}</h1>
			<hr style="border-top: solid 2px rgb(226, 226, 226); margin-top: 0px; margin-bottom: 5px;" />
		</div>
		<div class="col-sm-4 text-left">
			<a href="{{url('ag_principal_categorias',{categoriaSlug: producto.getCategory.slug})}}">
				{{producto.getCategory.name}}
			</a>
		</div>
		<div class="col-sm-4 text-center">
			<a href="{{pastProductLink}}">Anterior</a> - <a href="{{nextProductLink}}">Siguiente</a>
		</div>
		<div class="col-sm-4 text-right">
			Clave: {{producto.clave}}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<p style="margin-top: 13px;">{{producto.Caracteristicas}}</p>
		</div>
	</div>
	<div class="row" style="padding-top: 30px;">
		<div class="col-sm-5 text-center">

			<div class="row">
				<img class="cloudzoom" id="zoom1" src="{{asset(producto.fotos.0.getWebPath)}}" style="max-width:100%; max-height:400px" 
					data-cloudzoom="zoomSizeMode:'image', autoInside: 550" />
			</div>

			<div class="row" style="padding: 25px 0">
				{% for foto in producto.fotos %} {# thumbs, small, large en ese orden las imagenes de abajo, hay que cambiarlas #}
					<img class='cloudzoom-gallery' src="{{asset(foto.getWebPath)}}" style="max-width: 100px" 
						data-cloudzoom="useZoom: '.cloudzoom', image: '{{asset(foto.getWebPath)}}', zoomImage: '{{asset(foto.getWebPath)}}' " >
				{% endfor %}
			</div>

		</div>
		<div class="col-sm-7 text-right">
			<span><b>Clave:</b> {{producto.clave}}</span><br />
			{% if producto.Medidas is defined %} <span><b>Medidas:</b> {{producto.Medidas}}</span><br />{% endif %}
			{% if producto.Interior is defined %} <span><b>Interior:</b> {{producto.Interior}}</span><br />{% endif %}
			{% if producto.Exterior is defined %} <span><b>Exterior:</b> {{producto.Exterior}}</span><br />{% endif %}
			{% if producto.Colores is defined %} <span><b>Colores:</b> {{producto.Colores}}</span><br />{% endif %}
			{% if producto.Paginas is defined %} <span><b>Páginas:</b> {{producto.Paginas}} páginas</span><br />{% endif %}
			{% if producto.Encuadernacion is defined %} <span><b>Encuadernación:</b> {{producto.Encuadernacion}}</span><br />{% endif %}
			{% if producto.Publicidad is defined %} <span><b>Publicidad disponible:</b> {{producto.Publicidad}}</span><br />{% endif %}
			{% if producto.Empaque is defined %} <span><b>Empaque:</b> {{producto.Empaque}}</span><br />{% endif %}
			{% if producto.Caracteristicas is defined %} <br /><span><b>Características:</b> {{producto.Caracteristicas}}</span>{% endif %}
			{% if producto.Medidas is defined %} <span><b>Medidas:</b> {{producto.Medidas}}</span><br />{% endif %}
		</div>
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript" src="{{asset('js/cloudzoom.js')}}"></script>
    <script type="text/javascript">
        CloudZoom.quickStart();
    </script>
{% endblock %}